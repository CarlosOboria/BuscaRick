{
    "type": "AdaptiveCard",
    "speak": "3 minute energy flow with kayo video",
    "version": "1.5",
    "body": [
        {
            "type": "Image",
            "url": "https://th.bing.com/th/id/OIP.bYzI7_jHo7RJvEq4LHHGfQHaEK?rs=1&pid=ImgDetMain",
            "altText": "3 Minute Energy Flow with Kayo Video"
        },
        {
            "type": "TextBlock",
            "text": "Integrantes de  OBORIA",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://rickandmortyapi.com/api/character/avatar/${id}.jpeg",
                            "width": "100px",
                            "height": "100px",
                            "style": "Person",
                            "altText": "Avatar del personaje"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${name}",
                            "wrap": true,
                            "weight": "Default"
                        }
                    ],
                    "spacing": "Small"
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "Ficha del sujeto:\n",
            "maxLines": 0,
            "style": "heading",
            "horizontalAlignment": "Center",
            "fontType": "Monospace",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Especie: ${species}",
            "wrap": true,
            "separator": true,
            "fontType": "Monospace"
        },
        {
            "type": "TextBlock",
            "text": "GÃ©nero: ${gender}",
            "wrap": true,
            "spacing": "Small",
            "fontType": "Monospace"
        },
        {
            "type": "TextBlock",
            "text": "Estado: ${status}",
            "wrap": true,
            "spacing": "Small",
            "fontType": "Monospace"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Encontrado",
                    "url": "https://media2.giphy.com/media/v1.Y2lkPTc5MGI3NjExeWdnenh3bml5MG1sYmxobnphMWIxaXNxbWZyMmkzeGw2ZnhkZnh6MiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/Y4avwKekkjNgg9fzaP/giphy.webp"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Remind me",
                    "url": "https://media1.giphy.com/media/v1.Y2lkPTc5MGI3NjExaTlycWFsaWJoNXhvMDg3b3MxY2E3OXN2YmNlaW4wMGdqajVkYWN5aiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/WVudyGEaizNeg/giphy.webp",
                    "iconUrl": "icon:AlertUrgent"
                },
                {
                    "type": "Action.Execute",
                    "title": "Registrar",
                    "verb": "submit",
                    "id"   : "iDsubmit",
                    "fallback": "drop",
                    "data": {
                        "name": "${name}",
                        "status": "${status}",
                        "gender": "${gender}",
                        "species": "${species}",
                        "url": "${url}",
                        "id":"${id}",
                        "chatId":"${chatId}",
                        "cardTypeId":"${id}"
                    }
                }
            ]
        }
    ],
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json"
}