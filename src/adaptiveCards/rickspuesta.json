{
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "type": "AdaptiveCard",
    "speak": "Hawaii holiday escape deals start tonight",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "spacing": "Small"
                                }
                            ]
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "https://imagepphcloud.thepaper.cn/pph/image/229/9/71.jpg",
                                            "altText": "Avatar of Laurence Gibertson",
                                            "size": "Small"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "",
                                            "weight": "Bolder",
                                            "wrap": true
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "${currentDate}",
                                            "isSubtle": true,
                                            "size": "Small",
                                            "wrap": true,
                                            "spacing": "None"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "TextBlock",
                            "text": "Acceso a la ficha completa",
                            "size": "Large",
                            "weight": "Bolder",
                            "wrap": true,
                            "spacing": "Small"
                        },
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.OpenUrl",
                                    "title": "${url}",
                                    "url": "${url}"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://rickandmortyapi.com/api/character/avatar/${id}.jpeg",
                            "width": "100px",
                            "height": "100px",
                            "style": "Person",
                            "altText": "Avatar del personaje"
                        }
                    ]
                }
            ]
        }
    ]
}